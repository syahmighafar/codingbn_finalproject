<!-- form handling -->



<form action="/api/items" method="POST" id="add_item">
    <div class="new_item">
        <div class="form-group">
            <p>Type</p>
            
            <div class="radio inline">
                <input type="radio" id="radio-2" name="X" value="Food" checked>
                <label for="radio-2" class="radio-label">Food</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="X" value="Drink">
                <label for="radio-3" class="radio-label">Drink</label>
            </div>
        </div>
        <div class="form-group">
            <label for="Brand" class="text-dark">Brand</label>
            <input type="hidden" name="id" value="" required>
            <input type="text" name="Brand" value="" placeholder="Brand" required>
        </div>
        <div class="form-group">
            <label for="Name" class="text-dark">Name</label>
            <input type="hidden" name="id" value="" required>
            <input type="text" name="Name" value="" placeholder="Name" required>
        </div>
        <div class="form-group">
            <label for="CountryOfOrigin" class="text-dark">Country Of Origin</label>
            <input type="hidden" name="id" value="" required>
            <input type="text" name="CountryOfOrigin" value="" placeholder="Country Of Origin" required>
        </div>
        <div class="form-group">
            <label for="HalalStatus" class="text-dark">Halal Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="HalalStatus" value="Halal" checked>
                <label for="radio-4" class="radio-label">Halal</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="HalalStatus" value="Haram">
                <label for="radio-5" class="radio-label">Haram</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="HalalStatus" value="Mushbooh">
                <label for="radio-6" class="radio-label">Mushbooh</label>
            </div>
        </div>
        <div class="form-group">
            <p>Last Date of Certification</p>
            
            <input type="hidden" name="id" value="">
            <input type="date" name="LastDateofCertification" value="" placeholder="Last Date of Certification" required>
        </div>
        <div class="form-group">
            <p>Last Date of Review</p>
            
            <input type="hidden" name="id" value="">
            <input type="date" name="LastDateofReview" value="" placeholder="Last Date of Review" required>
        </div>


        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>